<!--pages/community/community.wxml-->
<!--头部  -->
<import src="../../components/card/card.wxml"/>
<!-- 请在scroll-view中编辑--by:xiaocai -->
<scroll-view scroll-y style="height: 600px;" bindscrolltoupper="upper" bindscroll="scroll" >
  <!-- 发帖 -->
  <view class="fatie-view {{showView?'show':'hide'}}">
    <view class="fatie" >
          <image class='top-icon-left' src="../../images/shequ/tu.jpg" />
          <text class='username'>阳叔的咖啡猫<text>女</text></text>
          <text class='sendTo' bindtap='sendTo'>+ 发帖</text>
    </view>
  </view>
  <!-- 详细信息 -->
  <view class="main">
    <template is="card" wx:for="{{catArray}}" data="{{...item}}" wx:key="item.id"/>
  </view>
  <!-- 时间轴 -->
</scroll-view>
