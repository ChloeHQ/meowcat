/* pages/community/community.wxss */

/*卡片  */
.section {
  position: relative;
  width: 100%;
  margin-bottom: 30rpx;
}
/*图片  */
.section .img {
  width: 684rpx;
  height: 340rpx;
}
.section .img image {
  width: 684rpx;
  max-height: 340rpx;
  border-radius: 8px;
}
/*文字信息  */
.section .info {
  position: absolute;
  width: 300rpx;
  height: 100rpx;
  margin-top: -50rpx;
  margin-left: -150rpx;
  top: 50%;
  left: 50%;
  color: #fff;
}
.section .info view {
  text-align: center;
}
.section .info-time {
  font-size: 40rpx;
}
.section .info-time {
  font-size: 28rpx;
}
.section .info-owner {
  font-size: 32rpx;
}

.fatie-view{
    width: 100%;
    height: 160rpx;
}
.fatie{
  display: flex;
  flex-direction:row;
  flex-wrap: nowrap;
  align-items: center;
  background: #fff;
  padding: 36rpx;
  color: #cd9057;
  font-size: 30rpx;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 2;
}
.fatie .top-icon-left{
    width: 80rpx;
    height: 80rpx;
    margin-right:30rpx; 
}
.fatie .username{
  width:480rpx;
}
.fatie .sendTo{
  display: inline-block;
}

.hide{
  display: none;  
}
.show{
  display: block;
}
